<h3>ClinicalData</h3>

<MudGrid>
    <MudItem xs="12" sm="7">
        <MudPaper Class="pa-4">
            <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">


                <MudTextField T="string" Label="Temperature" Required="true" RequiredError="Temperature is required!" />
                <MudTextField T="Int16" Label="Hg count " Required="false" />
                <MudDatePicker Label="Date of last GP visit" Editable="true" @bind-Date="date" Placeholder="Select Date" />
                <MudRadioGroup @bind-SelectedOption="prevPrescription_Radio">
                    <MudRadio Option="true" Color="Color.Primary" Dense="true">Previous prescription known</MudRadio>
                    <MudRadio Option="false" Color="Color.Secondary" Dense="false">Previous prescription unknown</MudRadio>
                </MudRadioGroup>
                <MudTextField T="string" Label="Last prescription" Required="false"  />


                <div class="d-flex align-center justify-space-between">
                    <MudCheckBox T="bool" Required="true" RequiredError="You must agree" Label="I agree!" />
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" Class="ml-auto">Register</MudButton>
                </div>
            </MudForm>
        </MudPaper>

        <MudPaper Class="pa-4 mt-4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true" OnClick="@(()=>form.Validate())">Validate</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" DisableElevation="true" OnClick="@(()=>form.ResetAsync())" Class="mx-2">Reset</MudButton>
            <MudButton Variant="Variant.Filled" DisableElevation="true" OnClick="@(()=>form.ResetValidation())">Reset Validation</MudButton>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="5">
        <MudPaper Class="pa-4 mud-height-full">
            <MudText Typo="Typo.subtitle2">@($"Errors ({errors.Length})")</MudText>
                @foreach (var error in errors)
            {
                <MudText Color="@Color.Error">@error</MudText>
            }
        </MudPaper>
    </MudItem>
</MudGrid>


@code {
    bool success;
    string[] errors = { };
    MudTextField<string> pwField1;
    MudForm form;
    DateTime? date = DateTime.Today;
    public bool prevPrescription_Radio { get; set; } = true;
}
